<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="JobMenu-Mapper">
    <select id="selectMainJobMenu" resultType="jobMenu">
        select *
        from jmenu
        where jCode like '%'||'0000'
        order by jCode asc
    </select>
    <select id="selectSubJobMenu" resultType="jobMenu">
        select *
        from jmenu
        where upCode = #{jCode} and isNav=1
    </select>
    <select id="selectJobMenuByCcode" resultType="jobMenu">
        select *
        from jmenu
        where jCode = #{jCode}
    </select>
    <select id="selectjobMenuByCname" resultType="jobMenu">
        select *
        from jmenu
        where jName = #{jName}
    </select>
</mapper>